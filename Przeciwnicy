class Przeciwnik:

    def __init__(self):
        self.pozycjax_przeciwnik = 0
        self.pozycjay_przeciwnik = 0
        self.kierunek = 0
        self.zycie = 1


    def spawn_przeciwnik(self, tablica, liczba1, liczba2, liczba3, liczba4):
        self.kierunek = random.randint(0, 3)
        x = 0
        while x < 1:
            self.pozycjay_przeciwnik = random.randint(liczba1, liczba2)
            self.pozycjax_przeciwnik = random.randint(liczba3, liczba4)
            if tablica[self.pozycjax_przeciwnik][self.pozycjay_przeciwnik] == " ":
                tablica[self.pozycjax_przeciwnik][self.pozycjay_przeciwnik] = "Q"
                x += 1
            else:
                x = 0
            odnowienie_planszy()


    def ruch_przeciwnik(self, tablica):

        #ruch w lewo
        if self.kierunek == 0:
            if tablica[self.pozycjax_przeciwnik][self.pozycjay_przeciwnik - 1] == " ":
                tablica[self.pozycjax_przeciwnik][self.pozycjay_przeciwnik] = " "
                tablica[self.pozycjax_przeciwnik][self.pozycjay_przeciwnik - 1] = "Q"
                self.pozycjay_przeciwnik -= 1
                ludzik.tracenie_zycia()
                odnowienie_planszy()
            else:
                self.kierunek = random.randint(1, 3)
        #ruch w prawo
        if self.kierunek == 1:
            if tablica[self.pozycjax_przeciwnik][self.pozycjay_przeciwnik + 1] == " ":
                tablica[self.pozycjax_przeciwnik][self.pozycjay_przeciwnik] = " "
                tablica[self.pozycjax_przeciwnik][self.pozycjay_przeciwnik + 1] = "Q"
                self.pozycjay_przeciwnik += 1
                ludzik.tracenie_zycia()
                odnowienie_planszy()
            else:
                self.kierunek = int(random.choice("023"))
        #ruch w góre
        if self.kierunek == 2:
            if tablica[self.pozycjax_przeciwnik - 1][self.pozycjay_przeciwnik] == " ":
                tablica[self.pozycjax_przeciwnik][self.pozycjay_przeciwnik] = " "
                tablica[self.pozycjax_przeciwnik - 1][self.pozycjay_przeciwnik] = "Q"
                self.pozycjax_przeciwnik -= 1
                ludzik.tracenie_zycia()
                odnowienie_planszy()
            else:
                self.kierunek = int(random.choice("013"))
        #ruch w dół
        if self.kierunek == 3:
            if tablica[self.pozycjax_przeciwnik + 1][self.pozycjay_przeciwnik] == " ":
                tablica[self.pozycjax_przeciwnik][self.pozycjay_przeciwnik] = " "
                tablica[self.pozycjax_przeciwnik + 1][self.pozycjay_przeciwnik] = "Q"
                self.pozycjax_przeciwnik += 1
                ludzik.tracenie_zycia()
                odnowienie_planszy()
            else:
                self.kierunek = random.randint(0, 2)


przeciwnik = Przeciwnik()
przeciwnik.spawn_przeciwnik(plansza, wymiar_y - 6, wymiar_y - 1, 1, 6)

przeciwnik2 = Przeciwnik()
przeciwnik2.spawn_przeciwnik(plansza, wymiar_y - 6, wymiar_y - 1, wymiar_x - 6, wymiar_x - 1)

przeciwnik3 = Przeciwnik()
przeciwnik3.spawn_przeciwnik(plansza, 1, 6, wymiar_x - 6, wymiar_x - 1)
